<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:text="Selamat Datang, Daniel!"
        android:textColor="#7C4A91"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.082"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.041" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:background="@drawable/textbox"
        android:fontFamily="sans-serif-medium"
        android:padding="6dp"
        android:text="Kamu sedang kesusahan dalam memilih alat yang cocok untuk menggambar? atau kamu belum paham cara menggunakan alat lukis yang baru saja kamu beli? Tenang, Kami disini ada untuk membantumu dalam pengetahuan cara menggunakan alat ataupun panduan dalam memilih alat yang cocok untuk menggambar."
        android:textColor="#7C4A91"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.483"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.112" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="sans-serif-black"
        android:text="Fun Info"
        android:textColor="#7C4A91"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/karya"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.416" />

    <TextView
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="sans-serif-medium"
        android:padding="8dp"
        android:text="Karya diatas dibuat pada sebuah media kertas. Biasanya dibuat pada
sebuah buku gambar sketsa yang biasa disebut dengan Sketch Book.
Karya tersebut dibuat dengan beberapa paduan teknik menggambar.
Teknik yang digunakan seperti Watercolor, Sketching, dan Inking.
Alat dan bahan yang digunakan seperti Kuas, Cat Air, Palet Cat Air,
Drawing Pen, dan beberapa tambahan seperti Spidol dan White
Marker."
        android:textColor="#7C4A91"
        android:textSize="12dp"
        app:layout_constraintEnd_toEndOf="@+id/imageView2"
        app:layout_constraintStart_toStartOf="@+id/imageView2"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <ImageView
        android:id="@+id/imakun"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginBottom="36dp"
        android:background="@drawable/akun"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.774"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imlist"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginBottom="36dp"
        android:background="@drawable/list"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.511"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imhome"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/home"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.262"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_akun"
        android:layout_width="wrap_content"
        android:background="@drawable/button3"
        android:layout_height="15dp"
        android:fontFamily="sans-serif-black"
        android:text="AKUN"
        android:textColor="#7C4A91"
        android:textSize="8dp"
        app:layout_constraintEnd_toEndOf="@+id/imakun"
        app:layout_constraintHorizontal_bias="0.444"
        app:layout_constraintStart_toStartOf="@+id/imakun"
        app:layout_constraintTop_toBottomOf="@+id/imakun" />

    <Button
        android:id="@+id/btn_alat"
        android:layout_width="wrap_content"
        android:background="@drawable/button3"
        android:layout_height="15dp"
        android:fontFamily="sans-serif-black"
        android:text="LIST ALAT"
        android:textColor="#7C4A91"
        android:textSize="8dp"
        app:layout_constraintEnd_toEndOf="@+id/imlist"
        app:layout_constraintStart_toStartOf="@+id/imlist"
        app:layout_constraintTop_toBottomOf="@+id/imlist" />

    <Button
        android:id="@+id/btn_home"
        android:layout_width="wrap_content"
        android:background="@drawable/button3"
        android:layout_height="15dp"
        android:fontFamily="sans-serif-black"
        android:text="HOME"
        android:textColor="#7C4A91"
        android:textSize="8dp"
        app:layout_constraintEnd_toEndOf="@+id/imhome"
        app:layout_constraintHorizontal_bias="0.571"
        app:layout_constraintStart_toStartOf="@+id/imhome"
        app:layout_constraintTop_toBottomOf="@+id/imhome" />

</androidx.constraintlayout.widget.ConstraintLayout>